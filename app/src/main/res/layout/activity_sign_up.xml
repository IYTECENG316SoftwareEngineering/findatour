<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="100dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ozanalpay.draft.SignUpActivity">

    <EditText
        android:id="@+id/name_input_from_sign_up"
        android:hint="@string/sign_up_name_hint"
        android:inputType="text"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/surname_input_from_sign_up"
        android:hint="@string/sign_up_surname_hint"
        android:inputType="text"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/mail_input_from_sign_up"
        android:hint="@string/email_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/password_input_from_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        android:hint="@string/password_sign_up"/>

    <Button
        android:id="@+id/sign_up_button_from_sign_up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_button"
        />
    <Button
        android:id="@+id/back_button_from_sign_up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_button_from_sign_up"/>

</LinearLayout>
