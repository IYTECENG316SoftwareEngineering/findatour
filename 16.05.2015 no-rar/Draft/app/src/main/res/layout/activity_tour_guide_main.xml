<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ozanalpay.draft.TourGuideMainActivity">
    <TextView
        android:text="Your Upcoming Tours"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:paddingBottom="60dp"
        android:paddingLeft="90dp"
     />
    <ScrollView
        android:id="@+id/tour_guide_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        ></ScrollView>

    <Button
        android:id="@+id/tour_guide_create_tour_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/create_tour"
        />




</LinearLayout>
