<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ozanalpay.draft.CreateTourActivity">

    <TextView
        android:textAlignment="gravity"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="Create A New Tour"/>

    <EditText
        android:id="@+id/tour_name_input_from_tour_create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Tour Name"
        />
    <EditText
        android:id="@+id/tour_city_name_input_from_tour_create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="City"
        />
    <EditText
        android:id="@+id/tour_max_person_value_input_from_tour_create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Tour Size as Number of Person"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/tour_ticket_price_input_from_tour_create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Tour Ticket Price"
        android:inputType="numberDecimal"/>
    <Spinner
        android:prompt="@string/tourist_main_find_language"
        android:id="@+id/language_input_from_tour_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/tourist_main_find_language_array"
        />
    <Button
        android:id="@+id/create_tour_date_input_button"
        android:hint="Select the Date of Tour"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/create_tour_start_time_input_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Select Start Hour"/>
    <Button
        android:id="@+id/create_tour_end_time_input_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Select End Hour"/>
    <Button
        android:id="@+id/create_tour_now_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Create Tour!"/>
    <TextView
        android:id="@+id/create_tour_get_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/create_tour_get_start_hour"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/create_tour_get_end_hour"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />





</LinearLayout>
